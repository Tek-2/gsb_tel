<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fraishorsforfait">

    <include layout="@layout/entete"/>
    <TextView
        android:labelFor="@+id/TV_FraisHorsForfait"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="20dp"
        android:text="Frais Hors Forfait"
        android:textColor="#0D3C0D"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:labelFor="@+id/TV_Libelle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:text="LibellÃ© :"
            android:textColor="#233023"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/libelle_FHF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9FDB7"
            android:hint="Saisir votre montant"
            android:padding="4dp"
            android:textColor="#CCEA7D"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:labelFor="@+id/TV_Montant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:text="Montant :"
            android:textColor="#233023"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Montant_FHF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9FDB7"
            android:hint="Saisir votre montant"
            android:padding="4dp"
            android:textColor="#CCEA7D"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:labelFor="@+id/TV_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:text="Date :"
            android:textColor="#233023"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txtdatefrais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:background="#E9FDB7"
            android:text=""/>



        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ED80AFD6"
            android:baselineAlignBottom="false"
            android:longClickable="false"
            android:onClick="ShowCal"
            android:contentDescription="affiche cal"
            android:scaleType="centerInside"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        tools:context="fraishorsforfait">
        <Button
            android:id="@+id/main_button_10"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:backgroundTint="#B5E180"
            android:text="Ajouter"
            android:textColor="#233023"
            android:onClick="MyClick"
            app:cornerRadius="30dp" />


    </LinearLayout>


</LinearLayout>