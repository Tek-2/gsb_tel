<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"></Space>

    <TextView
        android:labelFor="@+id/TV_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="20dp"
        android:text="Menu"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="#0D3C0D"
        android:textSize="50dp"
        android:layout_gravity="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"></Space>

    <include layout="@layout/entete"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"></Space>

    <Button
        android:id="@+id/main_button_15"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#218F03"
        android:onClick="click_menu"
        android:text="Déconnexion"
        android:textColor="#FFF"
        android:textSize="22dp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/main_button_1"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#218F03"
        android:onClick="click_menu"
        android:text="Frais au Forfait"
        android:textSize="22dp"
        android:textColor="#FFF"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/main_button_2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:backgroundTint="#218F03"
        android:layout_margin="10dp"
        android:onClick="click_menu"
        android:text="Frais Hors Forfait"
        android:textSize="22dp"
        android:textColor="#FFF"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/main_button_3"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#218F03"
        android:onClick="click_menu"
        android:text="Consulter totalité frais"
        android:textSize="22dp"
        android:textColor="#FFF"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/main_button_4"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="#218F03"
        android:onClick="click_menu"
        android:text="Paramètres"
        android:textSize="22dp"
        android:textColor="#FFF"
        app:cornerRadius="10dp"
        />

</LinearLayout>
